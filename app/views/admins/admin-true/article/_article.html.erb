<div class="d-flex flex-column align-items-center">
  <div class="text-left title-article border-bottom pb-3 mb-3"><h2>Ajouter un article</h2></div>
  <div class="form-article-content mb-5">
    <%= simple_form_for @article_new, :url => '/article', :method => 'POST' do |f| %>
      <%= f.rich_text_area :text, :label => "Ajouter un article", class: "text-field mt-4" %>
      <%= f.button :submit, 'Envoyer', class: "btn-submit mt-4 p-2" %>
    <% end %>
  </div>

  <div class="text-left title-article border-bottom pb-3 mb-3"><h2>Liste des articles</h2></div>
  <% @articles.reverse.each do |article| %>
    <div class="card-article container shadow">
      <div class="title-bottom mb-3">
        <p>Article post√© le : <%= article.created_at.strftime('%d-%m-%Y') %></p>
      </div>
      <p><%= article.text %></p>
      <%= link_to icon('fas', 'trash'), article_path(article),method: :delete, class: "btn btn-sm btn-danger ml-2 px-3 py-2" %>
      <%= link_to icon('fas', 'edit'), edit_article_path(article), class: "btn btn-sm btn-success ml-2 text-white px-3 py-2" %>
    </div>
  <% end %>
</div>
